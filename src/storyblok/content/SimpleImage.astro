---
import { storyblokEditable } from '@storyblok/astro';
import type { SbBlokData } from '@storyblok/astro';
import SmartImage from '../../components/SmartImage.astro';

interface Image extends SbBlokData {
  image: {
    title: string,
    alt: string,
    filename: string,
  },
  width: number,
  height: number,
  alt: string,
  bordered?: boolean,
  centered?: boolean,
}

interface Props {
  blok: Image,
}

const { blok } = Astro.props;
---
<SmartImage src={blok.image.filename}
            alt={blok.alt}
            title={blok.alt}
            class=`simple-image ${blok?.bordered ? 'border-4 rounded-xl border-gray-200' : ''} ${blok?.centered ? 'mx-auto' : ''}`
            {...storyblokEditable(blok)}
/>
