---
import {Image} from 'astro:assets';
import { storyblokEditable, type ISbRichtext, type SbBlokData } from '@storyblok/astro';
import RichTextRenderer from '@storyblok/astro/RichTextRenderer.astro';
import { loadImage } from '../../utils/get-image';

interface Image extends SbBlokData {
  filename: string;
}

interface Card extends SbBlokData {
  title: string,
  body: any | ISbRichtext,
  link?: string,
  image?: Image,
  classes?: string
  titleClasses?: string
  bodyClasses?: string
}

interface Props {
  blok: Card;
}

const { blok } = Astro.props;

const optImage = await loadImage(blok?.image?.filename || '');
---
<div class={'relative group transition border border-black/[0.05] dark:border-black rounded-lg ' + (blok?.classes || '')} {...storyblokEditable(blok)}>
  <div class="card-over"></div>
  <div class="relative top-0 left-0 flex flex-col rounded-t-lg overflow-hidden">
    {optImage.src !== '' &&
      <div class="rounded-t-lg h-[280px] w-full transition duration-500 group-hover:scale-105">
        <Image src={optImage.src} height="280" width="400" alt=`${blok?.title || ''} image` class="object-cover max-h-[280px] w-full" />
      </div>
    }
    <div class="p-4">
      {blok?.title && <h4 class={'text-xl text-pretty break-words block pt-4 pb-6 text-dark dark:text-white ' + blok?.titleClasses}>{blok.title}</h4>}
      <div class={'text-dark-3 dark:text-white ' + blok?.bodyClasses}>
        {blok.body &&
          (blok.body?.type ?
            <RichTextRenderer richTextData={blok.body} /> : blok.body)
        }
      </div>
    </div>
  </div>
  {blok?.link && <a href={blok.link} aria-label="Link zu mehr Informationen zu diesem Thema" class="card-link" />}
</div>

<style>
    .card-over {
        @apply after:rounded-lg after:absolute after:opacity-30 group-hover:after:opacity-60 after:z-0 after:top-0 after:bottom-0 after:left-0 after:right-0 after:content-[''] after:bg-white dark:after:bg-dark after:transition after:duration-500;
    }

    .card-link::after {
        @apply absolute top-0 left-0 right-0 bottom-0 z-20;
        content: '';
    }
</style>
