---
import { Image } from 'astro:assets';

import logo from '../../assets/logo/logo.svg';
import { type MenuItem } from '../../content/menuItems';

interface Props {
  menuItems: MenuItem[];
}

const { menuItems } = Astro.props;
---

<div x-show="mobOpen"
     class="lg:hidden absolute h-dvh max-h-dvh overflow-y-scroll w-dvw inset-0 bg-white"
     role="dialog"
     aria-modal="true"
     style="display: none"
>
  <div class="w-full px-6 py-6">
    <div class="flex items-center justify-between">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">orbnet</span>
        <Image class="h-8 w-auto" src={logo} alt="orbnet logo" width="125" height="32" loading="lazy" />
      </a>
      <button
        type="button"
        @click="mobOpen = false"
        class="-m-2.5 rounded-md p-2.5 text-gray-700"
      >
        <span class="sr-only">Close menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="mt-6 flow-root">
      <div class="-my-6 divide-y divide-gray-500/10">
        <div
          class="space-y-2 py-6"
        >
          {menuItems.map((men: MenuItem) => {
            if (!men.children || men.children.length === 0) {
              return (
                <a href={men.href}
                   class="-mx-3 block rounded-lg px-3 py-2 text-base leading-7 text-gray-900 hover:bg-gray-50"
                >
                  {men.name}
                </a>
              );
            }
            return (
              <div
                x-data="{open: false}"
                @click.away="open = false"
                class="-mx-3"
              >
                <button type="button"
                        @click="open = !open"
                        class="flex w-full items-center justify-between rounded-lg py-2 pl-3 pr-3.5 text-base leading-7 text-gray-900 hover:bg-gray-50"
                >
                  {men.name}
                  <svg class="h-5 w-5 flex-none" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                  </svg>
                </button>
                <div x-show="open"
                     class="mt-2 space-y-2"
                >
                  {[...(men.children || []), ...(men.actions || [])].map((item) => (
                    <>
                    <a href={item.href}
                       class="block py-1 pl-6 pr-3 text-sm leading-7 text-gray-900 hover:bg-gray-50"
                    >
                      {item.name}
                    </a>
                    {item.children && item.children.map((subItem: MenuItem) => (
                      <a href={subItem.href}
                         class="block py-1 pl-12 pr-3 text-sm leading-7 text-gray-900 hover:bg-gray-50"
                      >
                        {subItem.name}
                      </a>
                    ))}
                    </>
                  ))}
                </div>
              </div>
            );
          })}
        </div>
        <div class="pt-4">
          <a href="https://my.orbnet.de/account/login/"
             class="-mx-3 block rounded-lg px-3 py-2 text-base leading-7 text-gray-900 hover:bg-gray-50"
          >
            Log in
          </a>
          <a href="https://my.orbnet.de/account/register/"
             class="-mx-3 block rounded-lg px-3 py-2 text-base leading-7 text-gray-900 hover:bg-gray-50"
          >
            Jetzt testen
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
