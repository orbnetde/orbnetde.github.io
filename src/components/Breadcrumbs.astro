---
import { type Breadcrumb } from '../types/Breadcrumb';

interface Props {
  breadcrumbs?: Breadcrumb[];
}
const { breadcrumbs } = Astro.props;
const length: number = (breadcrumbs?.length || 1) - 1;
---
<nav aria-label="Breadcrumb" class="text-gray-700 dark:text-gray-500 pb-4">
  <ol role="list" class="flex items-center">
    {(breadcrumbs || []).map((bc: Breadcrumb, k: number) => (
      length === k ?
        <li class="mr-3 "><a href=`/${bc.slug}` aria-current="page">{bc.title}</a></li> :
        <li class="mr-3 after:content-['>'] after:ml-3"><a href=`/${bc.slug}`>{bc.title}</a></li>
    ))}
  </ol>
</nav>
